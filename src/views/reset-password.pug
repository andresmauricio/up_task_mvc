doctype html
html(lang="en")
  head
    include partials/header
  body(class="login")
    .contenedor-formulario
      h1 Reestablecer contraseña
      p Escribe una nueva contraseña

      if locals.message
        div(class="alerta")
          if validates
            each category in Object.keys(validates)
              each error in validates[category]
                div(class=`${category}`)
                  p #{error}

      form(class="caja-login" method="POST" action="/recovery-password")
        .campo
          label(for="password") password 
          input(type="password" name="password" placeholder="Ingresa tu nueva contraseña") 
        .campo.enviar
          input(type="submit" value="Cambiar password" class="boton")